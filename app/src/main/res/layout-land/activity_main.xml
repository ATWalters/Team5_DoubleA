<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clemson University"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/orange"/>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_view"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="150dp"
        app:cardBackgroundColor="@color/orange">

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="@string/profileTitle"
            android:textAlignment="center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:textSize="50sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src = "@drawable/male"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map_view"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="370dp"
        app:cardBackgroundColor="@color/orange"
        >

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="@string/mapTitle"
            android:textAlignment="center"
            android:layout_marginLeft="150dp"
            android:textSize="50sp"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/mapsline"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sports_view"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="290dp"
        app:cardBackgroundColor="@color/orange">

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="@string/sportsTitle"
            android:textAlignment="center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:textSize="50sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/football"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/funfacts_view"
        android:layout_gravity="center"
        android:layout_width="360dp"
        android:layout_height="130dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="370dp"
        app:cardBackgroundColor="@color/orange">

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="@string/gameTitle"
            android:textAlignment="center"
            android:layout_marginLeft="150dp"
            android:textSize="50sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/funfacts"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>