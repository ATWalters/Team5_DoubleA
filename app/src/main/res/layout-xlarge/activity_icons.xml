<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/profileLayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id = "@+id/iconLayout"
            android:padding="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ICONS"
                android:textSize="100sp"
                android:textAlignment="center"
                android:textColor="@color/clemsonOrange"
                android:textStyle="bold"
                android:padding="18dp"
                android:id="@+id/iconTitle"/>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shirt_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="120dp"
                android:layout_toLeftOf="@id/firstmedal_view"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src = "@drawable/womanshirt"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/firstmedal_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                card_view:cardBackgroundColor="@color/white"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/firstmedal" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/second_medal"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_toRightOf="@id/firstmedal_view"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/secondmedal"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/football_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="650dp"
                android:layout_toLeftOf="@id/gradcap_view"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="@color/white"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/football"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ring_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="650dp"
                android:layout_toRightOf="@id/gradcap_view"
                android:layout_marginLeft="20dp"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ring"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/gradcap_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="650dp"
                android:layout_centerHorizontal="true"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/graduationcap"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/soccer_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="400dp"
                android:layout_centerHorizontal="true"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/soccer"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/basketball_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="400dp"
                android:layout_toRightOf="@id/soccer_view"
                android:layout_marginLeft="20dp"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/basketball"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/baseball_view"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                card_view:cardCornerRadius="100dp"
                android:layout_marginTop="400dp"
                android:layout_toLeftOf="@id/soccer_view"
                android:layout_marginRight="20dp"
                card_view:cardBackgroundColor="@color/white">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseball"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">

                <ImageButton
                    android:id="@+id/backBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_background"
                    android:src="@drawable/back_arrow"
                    android:contentDescription="@string/back_to_previous_page">

                </ImageButton>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>