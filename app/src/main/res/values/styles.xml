<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="penaltyList">
        <item name="android:textSize">@dimen/penalty_list_size</item>
        <item name="android:padding">@dimen/penalty_list_padding</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="penaltyDesc">
        <item name="android:textSize">@dimen/penalty_list_size</item>
        <item name="android:padding">@dimen/penalty_list_padding</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="teamName">
        <item name="android:textSize">@dimen/team_name_size</item>
        <item name="android:textColor">@color/orange</item>

    </style>

    <style name="teamScore">
        <item name="android:textSize">@dimen/team_score_size</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="penaltyHeader">
        <item name="android:textSize">@dimen/team_name_size</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:radius">50dp</item>
    </style>

</resources>