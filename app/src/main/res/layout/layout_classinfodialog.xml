<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    android:padding="16dp"
    android:layout_height="200dp"
    android:layout_width="300dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Name"
        android:id="@+id/classTitle"
        android:contentDescription="Class Title"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/className"
        android:layout_centerHorizontal="true"
        android:contentDescription="Input class name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Code"
        android:layout_marginTop="30dp"
        android:contentDescription="Class Code title"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/classCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="Input class code"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Section"
        android:layout_marginTop="60dp"
        android:contentDescription="Class Section title"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/classSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:contentDescription="Input Class section"/>


</RelativeLayout>