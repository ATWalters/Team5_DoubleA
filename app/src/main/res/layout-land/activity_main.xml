<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="Title of University"
        android:text="Clemson University"
        android:textAlignment="center"
        android:textColor="@color/clemsonOrange"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_view"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Profile button"
        app:cardBackgroundColor="@color/clemsonOrange"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="25dp"
            android:text="@string/profileTitle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/male" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/map_view"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Map Button"
        app:cardBackgroundColor="@color/clemsonOrange"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toEndOf="@+id/profile_view"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:text="Campus\nMap"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/mapsline" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/sports_view"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Sport button"
        app:cardBackgroundColor="@color/clemsonOrange"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_view">

        <TextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:text="@string/sportsTitle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/football" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/funfacts_view"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Game button"
        app:cardBackgroundColor="@color/clemsonOrange"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toEndOf="@+id/sports_view"
        app:layout_constraintTop_toBottomOf="@+id/map_view">

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="120dp"
            android:text="@string/gameTitle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="33sp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/funfacts" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>